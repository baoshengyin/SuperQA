<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  	android:paddingTop="2dip"
    android:paddingLeft="0dip"
    android:background="@drawable/bk_main">
    
    <ListView
        android:id="@+id/FilelistView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bk_item" >
    </ListView>
   
    <RelativeLayout
	    android:id="@+id/toolbarfilelist"
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true">
        
	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:background="@drawable/bk_title"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    
		    <TextView
		    android:id="@+id/btnBackList"
			android:text="返回首页"
			android:gravity="center_horizontal"
			android:drawableTop="@drawable/button_back"
			android:layout_width="0px" 
		    android:layout_height="wrap_content"
		        android:layout_weight="1"/>
		   
		</LinearLayout>
        
    </RelativeLayout>
</RelativeLayout>
