<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffc8">
 
 	<TextView
 	    android:id="@+id/askInfo"
 	    android:layout_width="fill_parent"
 	    android:layout_height="wrap_content"
 	    android:textSize="18dip"
 	    android:background="#505050"  >
		
        <requestFocus />
    </TextView>
    
    

    <ListView
        android:id="@+id/listFileContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/askInfo"
        android:layout_above="@+id/toolbarcontent"
        android:background="#ffffc8" >
    </ListView>
        
	<RelativeLayout
	    android:id="@+id/toolbarcontent"
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true">
        
	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:background="@drawable/bk_title"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    
	         <TextView
			    android:id="@+id/btnDelFile"
				android:text="删除内容"
				android:paddingTop="3dip"
				android:gravity="center_horizontal"
				android:drawableTop="@drawable/button_del" 
				android:layout_width="0px" 
			    android:layout_height="wrap_content"
			        android:layout_weight="1"/>
    
		  
		    <TextView
			    android:id="@+id/btnBackFile"
				android:text="返回列表"
				android:gravity="center_horizontal"
				android:drawableTop="@drawable/button_back"
				android:layout_width="0px" 
			    android:layout_height="wrap_content"
			        android:layout_weight="1"/>
		   
		</LinearLayout>
        
    </RelativeLayout>
</RelativeLayout>
